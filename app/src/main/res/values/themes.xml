<resources>
    <!-- Base application theme. -->
    <style name="Theme.Liber" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/selected_tab_background</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/mabry_pro</item>
    </style>


    <style name="CountryPickerStyle" parent="Theme.AppCompat.Dialog">
        <item name="windowMinWidthMajor">80pt</item>
        <item name="windowMinWidthMinor">80pt</item>
        <item name="android:minWidth">400dp</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="CardExpire" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorOnPrimary">@color/purple_gray_900</item>
    </style>

    <style name="SpinnerDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="ExpirePicker" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorOnPrimary">@color/purple_gray_900</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorOnPrimary">@color/purple_gray_900</item>
    </style>

    <style name="CustomDialogBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomDialogTheme</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="CustomDialogTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="TranslucentStatusBar" parent="Theme.Liber">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="originalTheme" parent="Theme.Liber"></style>


    <style name="TopActionView">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:tint">@color/purple_gray_800</item>
        <item name="android:background">@drawable/curved_button</item>
        <item name="backgroundTint">@color/purple_gray_50</item>
    </style>

    <style name="AppHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="HeadingStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/AppHeadline</item>
        <item name="fontFamily">@font/atypdisplay_medium</item>
        <item name="android:textColor">@color/purple_gray_800</item>
    </style>

    <style name="SubHeadlineStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:textColor">@color/purple_gray_600</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="fontFamily">@font/atypdisplay_medium</item>
        <item name="android:textColor">@color/purple_gray_900</item>
    </style>

    <style name="SubTitleText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/purple_gray_600</item>
    </style>


    <style name="EditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:textColor">@color/purple_gray_800</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:background">@drawable/curved_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubheadMabry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:textColor">@color/purple_gray_800</item>
    </style>

    <style name="BodyMabry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:textColor">@color/purple_gray_800</item>
    </style>

    <style name="DialogMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogNegativeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">#007AFF</item>
    </style>

    <style name="DialogPositiveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/mabry_pro</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">#007AFF</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="dialogCornerRadius">12dp</item>

        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="Theme.Liber.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Liber.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Liber.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>