<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTopAction"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/purple_gray_50"
        android:padding="12dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTitle"
        style="@style/TitleText"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/investment_strategies" />

    <TextView
        android:id="@+id/tvSubTitle"
        style="@style/SubheadMabry"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/purple_gray_500"
        android:text="@string/subtitle_investment_strategies" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStrategies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:layoutAnimation="@anim/recycler_view_item_animation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:visibility="gone"
        android:id="@+id/viewGap" />

    <Button
        android:id="@+id/btnChooseStrategy"
        style="@style/ButtonStyleMabryMedium"
        android:layout_margin="24dp"
        android:background="@drawable/button_purple_500"
        android:text="@string/build_my_own_strategy" />


</androidx.appcompat.widget.LinearLayoutCompat>