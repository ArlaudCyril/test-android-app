<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_curved_layout"
    android:backgroundTint="@color/purple_gray_00"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <LinearLayout
        android:id="@+id/llCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/DialogTitle"
            android:padding="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/purple_gray_800"
            android:textStyle="bold"
            tools:text="@string/sign_my_contract" />

        <View
            android:id="@+id/viewGap"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMessage"
            style="@style/DialogMessage"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:padding="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/purple_gray_600"
            tools:text="@string/contract_has_not_signed" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tvNegativeButton"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/curved_button"
                android:backgroundTint="@color/purple_gray_50"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/purple_gray_800" />

            <Button
                android:id="@+id/tvPositiveButton"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/button_purple_500"
                android:backgroundTint="#7C38EA"
                android:text="@string/sign_my_contract"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>