<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <RelativeLayout
        android:id="@+id/rlCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/DialogTitle"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:textStyle="bold"
            tools:text="@string/sign_my_contract" />

        <TextView
            android:id="@+id/tvMessage"
            style="@style/DialogMessage"
            android:layout_below="@id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:padding="2dp"
            tools:text="@string/contract_has_not_signed" />


        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tvMessage"
            android:layout_marginTop="16dp"
            android:alpha="0.4"
            android:background="#DFDDDD"  />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewDivider"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvNegativeButton"
                style="@style/DialogNegativeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="12dp"
                tools:text="@string/cancel" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.4"
                android:background="#DFDDDD"  />

            <TextView
                android:id="@+id/tvPositiveButton"
                style="@style/DialogNegativeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="12dp"
                tools:text="@string/sign_my_contract" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>