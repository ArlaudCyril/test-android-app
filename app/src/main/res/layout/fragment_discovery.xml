<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_one"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/HeadingStyle"
            android:layout_marginHorizontal="24dp"
            android:gravity="start"
            android:text="@string/lyber_investments_reinvented" />

        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/SubHeadlineStyle"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:text="@string/diversified_regular_simple" />

        <Button
            android:id="@+id/btnSignUp"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/purple_500_"
            android:text="@string/sign_up" />

        <TextView
            android:id="@+id/tvLogin"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/purple_gray_50"
            android:gravity="center"
            android:text="@string/log_in"
            android:textColor="@color/purple_gray_800" />

    </LinearLayout>


</RelativeLayout>
