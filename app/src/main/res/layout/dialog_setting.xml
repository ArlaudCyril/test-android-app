<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleSettings"
            style="@style/DialogTitle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvDialogMsgSettings"
            style="@style/DialogMessage"
            android:layout_below="@+id/tvTitleSettings"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvDialogMsgSettings"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDialogMsgSettings"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnSettings"
                style="@style/DialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@color/purple_gray_800" />

            <View
                android:layout_width="1dp"
                android:layout_height="56dp"
                android:layout_below="@+id/tvDialogMsg" />

            <TextView
                android:id="@+id/btnCancel"
                style="@style/DialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/purple_gray_500" />


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>