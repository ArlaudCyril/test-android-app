<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.fragments.ExportOperationsFragment">

    <ImageView
        android:id="@+id/ivTopAction"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/gray_purple_50"
        android:padding="12dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_gray_800" />
    <TextView
        style="@style/TitleText"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/exportOperations"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/purple_gray_900" />
    <RelativeLayout
        android:id="@+id/rlBalance"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/curved_layout_border12_dp"
        android:padding="12dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvExportMonth"
            style="@style/SubheadMabry"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_drop_down" />
    </RelativeLayout>

    <View
        android:id="@+id/viewPopup"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/btnExport"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:background="@drawable/button_purple_500"
        android:minHeight="?attr/actionBarSize"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:translationZ="4dp">

        <TextView
            android:id="@+id/tvExport"
            style="@style/SubheadMabry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/export"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/purple_gray_00"/>
    </LinearLayout>

</LinearLayout>
