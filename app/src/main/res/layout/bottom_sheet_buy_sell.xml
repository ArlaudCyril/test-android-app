<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_curved_layout"
    android:backgroundTint="@color/purple_gray_00"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivTopAction"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="-8dp"
        android:backgroundTint="@color/purple_gray_50"
        android:padding="12dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_gray_800" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/SubheadMabry"
        android:gravity="center"
        android:text="Manage your asset"
        android:textColor="#423D33"
        app:layout_constraintBottom_toBottomOf="@id/ivTopAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivTopAction" />

    <ImageView
        android:id="@id/ivWithdraw"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_drawable"
        android:backgroundTint="@color/purple_gray_50"
        android:padding="4dp"
        android:src="@drawable/ic_withdraw"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTopAction" />

    <TextView
        android:id="@+id/tvTitleWithdraw"
        style="@style/SubheadMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="Withdraw"
        android:textColor="@color/purple_gray_700"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowWithdraw"
        app:layout_constraintStart_toEndOf="@id/ivWithdraw"
        app:layout_constraintTop_toBottomOf="@id/ivTopAction" />

    <TextView
        android:id="@+id/tvSubTitleWithdraw"
        style="@style/BodyMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:text="Your assets to your bank account"
        android:textColor="@color/purple_gray_500"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowWithdraw"
        app:layout_constraintStart_toEndOf="@id/ivWithdraw"
        app:layout_constraintTop_toBottomOf="@id/tvTitleWithdraw" />

    <ImageView
        android:id="@+id/ivRightArrowWithdraw"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_right_arrow_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitleWithdraw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleWithdraw" />


    <ImageView
        android:id="@id/ivExchange"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_drawable"
        android:backgroundTint="@color/purple_gray_50"
        android:padding="4dp"
        android:src="@drawable/ic_exchange"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivWithdraw" />

    <TextView
        android:id="@+id/tvTitleExchange"
        style="@style/SubheadMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="Exchange"
        android:textColor="@color/purple_gray_700"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowWithdraw"
        app:layout_constraintStart_toEndOf="@id/ivExchange"
        app:layout_constraintTop_toBottomOf="@id/ivWithdraw" />

    <TextView
        android:id="@+id/tvSubTitleExchange"
        style="@style/BodyMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:text="Trade one asset against another"
        android:textColor="@color/purple_gray_500"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowExchange"
        app:layout_constraintStart_toEndOf="@id/ivExchange"
        app:layout_constraintTop_toBottomOf="@id/tvTitleExchange" />

    <ImageView
        android:id="@+id/ivRightArrowExchange"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_right_arrow_grey"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitleExchange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleExchange" />

    <ImageView
        android:id="@+id/ivDeposit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/circle_drawable"
        android:backgroundTint="@color/purple_gray_50"
        android:padding="4dp"
        android:src="@drawable/ic_deposit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivExchange" />

    <TextView
        android:id="@+id/tvTitleDeposit"
        style="@style/SubheadMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Deposit"
        android:textColor="@color/purple_gray_700"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowDeposit"
        app:layout_constraintStart_toEndOf="@id/ivDeposit"
        app:layout_constraintTop_toBottomOf="@id/ivExchange" />

    <TextView
        android:id="@+id/tvSubTitleDeposit"
        style="@style/BodyMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:text="Deposit FIAT"
        android:textColor="@color/purple_gray_500"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowDeposit"
        app:layout_constraintStart_toEndOf="@id/ivDeposit"
        app:layout_constraintTop_toBottomOf="@id/tvTitleDeposit" />

    <ImageView
        android:id="@+id/ivRightArrowDeposit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_right_arrow_grey"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitleDeposit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleDeposit" />


    <ImageView
        android:id="@+id/ivBuy"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_drawable"
        android:backgroundTint="@color/purple_gray_50"
        android:padding="4dp"
        android:src="@drawable/ic_buy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDeposit" />

    <TextView
        android:id="@+id/tvTitleBuy"
        style="@style/SubheadMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="Buy"
        android:textColor="@color/purple_gray_700"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowDeposit"
        app:layout_constraintStart_toEndOf="@id/ivBuy"
        app:layout_constraintTop_toBottomOf="@id/ivDeposit" />

    <TextView
        android:id="@+id/tvSubTitleBuy"
        style="@style/BodyMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:text="Buy assets"
        android:textColor="@color/purple_gray_500"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowDeposit"
        app:layout_constraintStart_toEndOf="@id/ivBuy"
        app:layout_constraintTop_toBottomOf="@id/tvTitleBuy" />

    <ImageView
        android:id="@+id/ivRightArrowBuy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_right_arrow_grey"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitleBuy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleBuy" />


    <ImageView
        android:id="@+id/ivSell"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_drawable"
        android:backgroundTint="@color/purple_gray_50"
        android:padding="4dp"
        android:src="@drawable/ic_sell"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBuy" />

    <TextView
        android:id="@+id/tvTitleSell"
        style="@style/SubheadMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="Sell"
        android:textColor="@color/purple_gray_700"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowBuy"
        app:layout_constraintStart_toEndOf="@id/ivBuy"
        app:layout_constraintTop_toBottomOf="@id/ivBuy" />

    <TextView
        android:id="@+id/tvSubTitleSell"
        style="@style/BodyMabry"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:text="Sell assets"
        android:textColor="@color/purple_gray_500"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/ivRightArrowSell"
        app:layout_constraintStart_toEndOf="@id/ivSell"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSell" />

    <ImageView
        android:id="@+id/ivRightArrowSell"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_right_arrow_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvSubTitleSell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleSell" />


</androidx.constraintlayout.widget.ConstraintLayout>