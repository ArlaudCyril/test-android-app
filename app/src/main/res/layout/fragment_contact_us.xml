<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="38dp">
        <ImageView
            android:id="@+id/ivTopAction"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_centerVertical="true"
            android:background="@drawable/gray_purple_50"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/purple_gray_800" />

        <TextView
            style="@style/TitleText"
            android:layout_centerInParent="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/contact_us"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/purple_gray_900" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/curved_button"
                android:backgroundTint="@color/purple_gray_50"
                android:orientation="vertical"
                android:padding="12dp"
                android:paddingVertical="16dp">

                <TextView
                    style="@style/SubheadMabry"
                    android:drawableStart="@drawable/sms"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:text="@string/hint_email"
                    android:textColor="@color/purple_gray_700" />

                <TextView
                    android:id="@+id/tvSendEmail"
                    style="@style/BodyMabry"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="26dp"
                    android:lineSpacingExtra="2sp"
                    android:text="@string/send_us_email"
                    android:textColor="@color/purple_gray_300" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContactForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/curved_button"
                android:backgroundTint="@color/purple_gray_50"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <TextView
                    style="@style/SubheadMabry"
                    android:layout_marginStart="16dp"
                    android:text="@string/contact_form"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/purple_gray_700" />

                <EditText
                    android:id="@+id/etMsg"
                    style="@style/EditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/edit_text_background"
                    android:gravity="top"
                    android:hint="@string/msg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="16dp" />

                <Button
                    android:id="@+id/btnSend"
                    style="@style/ButtonStyle"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/purple_500"
                    android:text="@string/send" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/curved_button"
                android:backgroundTint="@color/purple_gray_50"
                android:orientation="vertical"
                android:padding="12dp"
                android:paddingVertical="16dp">

                <TextView
                    style="@style/SubheadMabry"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:text="@string/address"
                    android:textColor="@color/purple_gray_700"
                    app:drawableStartCompat="@drawable/address" />

                <TextView
                     style="@style/BodyMabry"
                    android:layout_marginTop="20dp"
                    android:text="@string/contact_us_by_mail"
                    android:textColor="@color/purple_gray_300" />
                <TextView
                    android:id="@+id/tvContactAddress"
                    style="@style/BodyMabry"
                    android:layout_marginBottom="26dp"
                    android:lineSpacingExtra="2sp"
                    android:text="@string/contact_address"
                    android:textColor="@color/purple_500" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvWillGetBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="20dp"
                android:text="@string/will_get_back"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/purple_gray_400" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>