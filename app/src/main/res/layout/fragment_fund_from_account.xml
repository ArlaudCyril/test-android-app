<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTopAction"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toTopOf="@id/topGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">


            <TextView
                style="@style/HeadingStyle"
                android:layout_marginTop="32dp"
                android:text="Fund your account from your bank account" />

            <TextView
                style="@style/SubheadMabry"
                android:layout_marginTop="4dp"
                android:text="Make sure the name of the bank account is the same as your name on Lyber (Frida Kahlo)."
                android:textColor="@color/purple_gray_600" />

            <TextView
                style="@style/BodyMabry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="IBAN"
                android:textColor="@color/purple_gray_600" />

            <TextView
                style="@style/SubheadMabry"
                android:layout_marginTop="8dp"
                android:text="AA123456789000000"
                android:textColor="@color/purple_gray_700" />

            <TextView
                android:visibility="gone"
                style="@style/BodyMabry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Reference number"
                android:textColor="@color/purple_gray_600" />

            <TextView
                android:visibility="gone"
                style="@style/SubheadMabry"
                android:layout_marginTop="8dp"
                android:text="ABCDEFGHIJKLMNOPQRST"
                android:textColor="@color/purple_gray_700" />

            <TextView
                style="@style/BodyMabry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="SWIFT/BIC"
                android:textColor="@color/purple_gray_600" />

            <TextView
                style="@style/SubheadMabry"
                android:layout_marginTop="8dp"
                android:text="ABC12345"
                android:textColor="@color/purple_gray_700" />

            <TextView
                android:visibility="gone"
                style="@style/BodyMabry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Recipient name"
                android:textColor="@color/purple_gray_600" />

            <TextView
                android:visibility="gone"
                style="@style/SubheadMabry"
                android:layout_marginTop="8dp"
                android:text="Lyber"
                android:textColor="@color/purple_gray_700" />

            <TextView
                android:visibility="gone"
                style="@style/BodyMabry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Recipient adress"
                android:textColor="@color/purple_gray_600" />

            <TextView
                android:visibility="gone"
                style="@style/SubheadMabry"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="6dp"
                android:text="2 rue de lâ€™espoir\n75001 Paris\nFrance"
                android:textColor="@color/purple_gray_700" />

            <TextView
                android:visibility="gone"
                style="@style/BodyMabry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Bank name"
                android:textColor="@color/purple_gray_600" />

            <TextView
                android:visibility="gone"
                style="@style/SubheadMabry"
                android:layout_marginTop="8dp"
                android:text="Banque de France"
                android:textColor="@color/purple_gray_700" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/curved_button"
                android:backgroundTint="@color/purple_gray_50"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="16dp">

                <TextView
                    style="@style/BodyMabry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transfer timming"
                    android:textColor="@color/purple_gray_600" />

                <TextView
                    style="@style/SubheadMabry"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="6dp"
                    android:text="SEPA transfers take 1-3 business days to be\nreceived by Lyber.
                \nIf you do it today, it should be registered by\nFriday, April 22, 2022."
                    android:textColor="@color/purple_gray_700" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>