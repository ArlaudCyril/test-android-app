<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivTopAction"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:src="@drawable/ic_back" />



        <TextView
            style="@style/HeadingStyle"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/two_fact_authentication" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical">

            <TextView
                style="@style/SubheadMabry"
                android:layout_marginTop="52dp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="@string/add_google_authenticator"
                android:textColor="@color/purple_gray_500" />

            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_width="243dp"
                android:layout_marginVertical="4dp"
                android:layout_height="265dp"
                android:layout_gravity="center" />

            <TextView
                style="@style/SubheadMabry"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="@string/add_manually_google_authenticator"
                android:textColor="@color/purple_gray_500" />

            <TextView
                android:id="@+id/tvAddGoogleAuthenticator"
                style="@style/SubheadMabry"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/copy_key"
                android:textColor="@color/purple_500" />

            <Button
                android:id="@+id/btnVerify"
                style="@style/ButtonStyle"
                android:layout_gravity="bottom"
                android:layout_marginTop="68dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/curved_button"
                android:backgroundTint="@color/purple_500"
                android:text="@string/verify"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>


